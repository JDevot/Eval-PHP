{% extends 'base.html.twig' %}

{% block title %}Entreprise index
{% endblock %}

{% block body %}
	<div class="container-fluid">
		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}
		<h2>
			Liste des Entreprises
		</h2>
		<a href="{{ path('company_new') }}" class="btn btn-primary mb-3">Ajouter une nouvelle entreprise</a>
		<div class="fade-in">
			<div class="row">
				<div class="col-lg-12">
					<div class="card">
						<div class="card-header">
							<i class="fa fa-align-justify"></i>
							Tableau entreprise
						</div>
						<div class="card-body">
							<table class="table table-reponsive-sm">
								<thead>
									<tr>
										<th>Id</th>
										<th>Nom</th>
										<th>Adresse</th>
										<th>actions</th>
									</tr>
								</thead>
								<tbody>
									{% for company in companies %}
										<tr>
											<td>{{ company.id }}</td>
											<td>{{ company.name }}</td>
											<td>{{ company.adress }}</td>
											<td>
												<a href="{{ path('company_show', {'id': company.id}) }}" class="btn btn-primary">Voir d√©tails</a>
												<a href="{{ path('company_edit', {'id': company.id}) }}" class="btn btn-primary">Edition</a>
											</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}