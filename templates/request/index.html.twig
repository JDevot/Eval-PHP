{% extends 'base.html.twig' %}
{% block title %}Demande index
{% endblock %}
{% block body %}

	<div class="container-fluid">
		<h2>
			Liste des demandes
		</h2>
		<a href="{{ path('request_new') }}" class="btn btn-primary mb-3">Ajouter une nouvelle demande</a>
		<div class="fade-in">
			<div class="row">
				<div class="col-lg-12">
					<div class="card">
						<div class="card-header">
							<i class="fa fa-align-justify"></i>
							Tableau demande
						</div>
						<div class="card-body">
							<table class="table table-reponsive-sm">
								<thead>
									<tr>
										<th>Titre</th>
                                        <th>Contenue</th>
										<th>Actions</th>
									</tr>
								</thead>
								<tbody>
									{% for request in requests %}
										<tr>
											<td>{{ request.title  }}</td>
                                            <td>{{ request.content }}</td>
											<td>
												<a href="{{ path('request_show', {'id': request.id}) }}">show</a>
												<a href="{{ path('request_edit', {'id': request.id}) }}">edit</a>
											</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}